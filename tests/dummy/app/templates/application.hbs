<h1 class="header">Ember Lazy Responsive Image</h1>

<div class="content">

  <div class="images">
    <div>
      <h2>Lazy, inline LQIP</h2>
      {{responsive-image image="inline.jpg" className="inline"}}
    </div>
    <div>
      <h2>Lazy, remote LQIP</h2>
      {{responsive-image image="remote.jpg" className="remote"}}
    </div>
    <div>
      <h2>Lazy, no LQIP</h2>
      {{responsive-image image="lazy.jpg" className="lazy"}}
    </div>
  </div>

  <div class="images">
    <div>
      <h2>Lazy, inline LQIP</h2>
      {{responsive-background image="inline.jpg" class="bg-inline img"}}
    </div>
    <div>
      <h2>Lazy, remote LQIP</h2>
      {{responsive-background image="remote.jpg" class="bg-remote img"}}
    </div>
    <div>
      <h2>Lazy, no LQIP</h2>
      {{responsive-background image="lazy.jpg" class="bg-lazy img"}}
    </div>
  </div>

</div>
